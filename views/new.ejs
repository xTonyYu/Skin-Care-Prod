<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <%- include('partials/head.ejs') %>
    
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/addnew.css">
    <!-- Main JS -->
  <script defer src="./js/app.js"></script>

    <title>Sign Up</title>
</head>
<body>
    <%- include('partials/nav.ejs') %>

    <div class="sign-up" id="sign-this"> 
    <h3>Sign Up</h3>

    <div class="form-border">
    <div class="form-container">
        <form action="/users" method="POST">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="first-name" class="first">
                  First Name</label>
                <input type="text" class="form-control" id="first-name" name="firstName" required placeholder="first name">
              </div>
              <div class="form-group col-md-6">
                <label for="last-name" class="last">
                  Last Name</label>
                <input type="text" class="form-control" id="last-name" name="lastName" required placeholder="last name">
              </div>
            </div>
            <div class="form-group">
              <label for="email" class="email-label">
                Email</label>
              <input type="text" class="form-control" id="email" name="email" required placeholder="yourname@email.com">
            </div>
            <div class="form-group" id="add-button">
              <button type="submit" class="btn btn-primary" id="act-button">Add User</button>
            </div>
        </form>
    </div>
  </div>
</div>

    <%- include('partials/footer') %>
</body>
</html>

